# CarSearch VE - Environment Variables

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/carsearch_ve

# OpenAI (for RAG embeddings)
OPENAI_API_KEY=sk-...

# Anthropic (for query understanding)
ANTHROPIC_API_KEY=sk-ant-...

# Redis (for caching and task queue)
REDIS_URL=redis://localhost:6379

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:3000

# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=true

# Scraper Configuration
SCRAPER_MAX_PAGES=10
SCRAPER_DELAY_SECONDS=2
PROXY_URL=  # Optional: http://proxy:port

# Email (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password

# Monitoring
SENTRY_DSN=  # Optional

# Environment
ENVIRONMENT=development  # development | production
